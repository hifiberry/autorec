#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	cargo build --release --bin autorecord --bin vu_meter

override_dh_auto_install:
	install -D -m 0755 target/release/autorecord debian/hifiberry-autorec/usr/bin/autorecord
	install -D -m 0755 target/release/vu_meter debian/hifiberry-autorec/usr/bin/vu_meter

override_dh_auto_test:
	# Skip tests

override_dh_auto_clean:
	cargo clean || true
